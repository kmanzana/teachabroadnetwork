body
  font-family: 'Quicksand', sans-serif

.banner
  text-align: center

  .btn
    border: none

  header.top-nav
    margin-top: 30px
    margin-bottom: 120px

  .main-title
    font-family: 'Quicksand', sans-serif
    margin-bottom: 36px

  .sub-title
    width: 85%
    margin: 0 auto 50px

  .separator
    width: 95%
    height: 1px
    background: #333333
    margin: 0 auto

  .account-prompt
    font-size: 24px
    margin-top: 40px
    margin-bottom: 40px

  .buttons
    .btn
      font-size: 16px
      padding: 12px 40px
      margin: 5px 12px

    .btn-primary
      background-color: #EC6433

    .btn-default
      background-color: #F4A285

.footer
  margin-top: 50px

html:after
  content : ""
  display: block
  position: fixed
  top: 0
  left: 0
  background-image: url(<%= asset_path 'home.jpg' %>)
  width: 100%
  height: 100%
  opacity : 0.3
  z-index: -1
  background-size: cover
